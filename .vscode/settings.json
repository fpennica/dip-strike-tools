{
    // Editor
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "files.associations": {
        "./requirements/*.txt": "pip-requirements",
        "metadata.txt": "ini",
        "**/*.model3": "xml",
        "**/*.ts": "xml",
        "**/*.ui": "xml"
    },
    // Markdown
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "markdown.updateLinksOnFileMove.enableForDirectories": true,
    "markdown.validate.enabled": true,
    "markdown.validate.fileLinks.markdownFragmentLinks": "warning",
    "markdown.validate.fragmentLinks.enabled": "warning",
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "files.trimTrailingWhitespace": false,
        "rewrap.autoWrap.enabled": false,
    },
    // Python
    "python.analysis.autoFormatStrings": false, // breaking PyQt translation
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportOptionalMemberAccess": "none"  // Disable warning for optional member access
    },
    // "python.defaultInterpreterPath": ".venv/bin/python",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.activateEnvironment": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports":"explicit"
        },
        "editor.rulers": [
            119
        ],
        "editor.wordWrapColumn": 119,
    },
    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": true,
    // Linter

    // Extensions
    "autoDocstring.docstringFormat": "sphinx",
    "esbonio.sphinx.confDir": "${workspaceFolder}/docs",
    "rewrap.wrappingColumn": 119,
    "rewrap.autoWrap.enabled": true,
}
